<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/idp_button_background_twitter"
    android:padding="12dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="traindge.masandroidproject.ui.ProfileActivity"
    tools:showIn="@layout/activity_profile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/tvUidProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:background="@drawable/bg_border"
            android:lineSpacingExtra="10sp"
            android:padding="8dp"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:textColor="#fff"
            android:textSize="24sp"
            tools:text="Uid" />

        <TextView
            android:id="@+id/tvEmailProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:background="@drawable/bg_border"
            android:padding="8dp"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:textColor="#fff"
            android:textSize="24sp"
            tools:text="Email" />

        <TextView
            android:id="@+id/tvNameProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:background="@drawable/bg_border"
            android:lineSpacingExtra="10sp"
            android:padding="8dp"
            android:text="Not_required"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:textColor="#fff"
            android:textSize="24sp"
            tools:text="Name" />

        <TextView
            android:id="@+id/tvCollege"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:background="@drawable/bg_border"
            android:lineSpacingExtra="10sp"
            android:padding="8dp"
            android:text="Not_required"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:textColor="#fff"
            android:textSize="24sp"
            tools:text="College" />

        <TextView
            android:id="@+id/tvStudentName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:background="@drawable/bg_border"
            android:lineSpacingExtra="10sp"
            android:padding="8dp"
            android:text="Not_required"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:textColor="#fff"
            android:textSize="24sp"
            tools:text="student" />

        <TextView
            android:id="@+id/tvParent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:background="@drawable/bg_border"
            android:lineSpacingExtra="10sp"
            android:padding="8dp"
            android:text="Not_required"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:textColor="#fff"
            android:textSize="24sp"
            tools:text="parent" />

        <TextView
            android:id="@+id/tvMobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:background="@drawable/bg_border"
            android:lineSpacingExtra="10sp"
            android:padding="8dp"
            android:text="Not_required"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:textColor="#fff"
            android:textSize="24sp"
            tools:text="mobile" />

        <TextView
            android:id="@+id/tvPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:background="@drawable/bg_border"
            android:lineSpacingExtra="10sp"
            android:padding="8dp"
            android:text="Not_required"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:textColor="#fff"
            android:textSize="24sp"
            android:visibility="gone"
            tools:text="password" />

        <TextView
            android:id="@+id/tvClass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:background="@drawable/bg_border"
            android:lineSpacingExtra="10sp"
            android:padding="8dp"
            android:text="Not_required"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:textColor="#fff"
            android:textSize="24sp"
            tools:text="Class name" />

        <TextView
            android:id="@+id/tvQualification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:background="@drawable/bg_border"
            android:lineSpacingExtra="10sp"
            android:padding="8dp"
            android:text="Not_required"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:textColor="#fff"
            android:textSize="24sp"
            tools:text="PHd" />


    </LinearLayout>
</ScrollView>
